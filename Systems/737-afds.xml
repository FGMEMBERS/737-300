<?xml version="1.0"?>

<PropertyList>
 <!-- =============================================================== -->
 <!-- Roll Axis Modes                                                 -->
 <!-- =============================================================== -->

<!-- HDG SEL mode -->
   <filter>
    <name>heading bug error computer/normalizer</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV-HDG</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <property>autopilot/settings/heading-bug-deg</property>
      <offset>
        <property>orientation/heading-magnetic-deg</property>
        <scale>-1.0</scale>
      </offset>
    </input>
    <output>/autopilot/internal/heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- VOR/LOC mode -->
  <filter>
    <name>nav1 heading error computer/normalizer</name>
    <debug>false</debug>
    <type>gain</type>
    <input> <!-- this is for LOCALIZER CAPTURE -->
      <condition>
        <property>/instrumentation/nav[0]/nav-loc</property>
      </condition>
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/instrumentation/nav[0]/crosstrack-error-m</property>
            <value>0.06</value>
          </product>
          <product>
            <property>autopilot/internal/nav1-crosstrack-rate-mps</property>
            <value>0.2</value>
          </product>
        </sum>
      </expression>
    </input>
    <input> <!-- this is for other modes (VOR, LNAV) -->
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/instrumentation/nav[0]/crosstrack-error-m</property>
            <value>0.03</value>
          </product>
          <product>
            <property>autopilot/internal/nav1-crosstrack-rate-mps</property>
            <value>0.45</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/target-heading-shift-nav1</output>
      <min>-90</min>
      <max>90</max>
    <gain>1.0</gain>
  </filter>

   <filter>
    <name>heading bug error computer/normalizer</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV-NAV</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <expression>
        <sum>
          <property>/instrumentation/nav[0]/radials/target-radial-deg</property>
          <property>autopilot/internal/target-heading-shift-nav1</property>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- LNAV mode -->
  <filter>
    <name>fms heading error computer/normalizer</name>
    <debug>false</debug>
    <type>gain</type>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV</property>
      </condition>
    </enable>
    <input> <!-- this is for LNAV -->
      <expression>
        <sum>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>/autopilot/internal/fms-crosstrack-error-m</property>
            <value>0.03</value>
          </product>
          <product>
            <property>/autopilot/internal/fms-crosstrack-rate-mps</property>
            <value>0.45</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/target-heading-shift-fms</output>
      <min>-60</min>
      <max>60</max>
    <gain>1.0</gain>
  </filter>



   <filter>
    <name>heading bug error computer/normalizer</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LNAV</property>
      </condition>
    </enable>	
    <type>gain</type>
    <input>
      <condition>
        <property>/autopilot/internal/wp-crosstrack-hold</property>
      </condition>
      <expression>
        <sum>
          <property>/instrumentation/gps/wp/leg-true-course-deg</property>
          <property>autopilot/internal/target-heading-shift-fms</property>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <input>
      <expression>
        <sum>
          <property>/autopilot/route-manager/wp/true-bearing-deg</property>
          <product>
            <property>/autopilot/internal/drift-angle-deg</property>
            <value>-1</value>
          </product>
          <product>
            <property>orientation/heading-deg</property>
            <value>-1</value>
          </product>
        </sum>
      </expression>
    </input>
    <output>/autopilot/internal/heading-bug-error-deg</output>
    <period>
      <min>-180</min>
      <max>180</max>
    </period>
    <gain>1.0</gain>
  </filter>

<!-- ###### Target bank calculator -->

  <pi-simple-controller>
    <name>Calculator for target bank in HDG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <property>/autopilot/internal/LNAV-HDG</property>
          <property>/autopilot/internal/LNAV-NAV</property>
          <property>/autopilot/internal/LNAV</property>
        </or>
      </condition>
    </enable>	
    <input>
      <prop>autopilot/internal/heading-bug-error-deg</prop>
    </input>
    <reference>
      <value>0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-bank</prop>
    </output>
    <config>
      <Kp>-1.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/settings/maximum-bank-neg</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/settings/maximum-bank</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <pi-simple-controller>
    <name>Roll rate calculator</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <property>/autopilot/internal/LNAV-HDG</property>
          <property>/autopilot/internal/LNAV-NAV</property>
          <property>/autopilot/internal/LNAV</property>
        </or>
      </condition>
    </enable>	
    <input>
      <prop>/orientation/roll-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-bank</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-rate</prop>
    </output>
    <config>
      <Kp>0.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>
        <condition>
          <and>
            <property>/autopilot/internal/VORLOC-NAV1-ONCOURSE</property>
            <not>
              <property>/instrumentation/nav[0]/nav-loc</property>
            </not>
          </and>
        </condition>
        <value>-1.3</value>
      </u_min>
      <u_max>
        <condition>
          <and>
            <property>/autopilot/internal/VORLOC-NAV1-ONCOURSE</property>
            <not>
              <property>/instrumentation/nav[0]/nav-loc</property>
            </not>
          </and>
        </condition>
        <value>1.3</value>
      </u_max>
      <u_min>
        <condition>
          <and>
            <property>/autopilot/internal/LNAV-NAV</property>
            <not>
              <property>/autopilot/internal/VORLOC-NAV1-ONCOURSE</property>
            </not>
          </and>
        </condition>
        <value>-5.5</value>
      </u_min>
      <u_max>
        <condition>
          <and>
            <property>/autopilot/internal/LNAV-NAV</property>
            <not>
              <property>/autopilot/internal/VORLOC-NAV1-ONCOURSE</property>
            </not>
          </and>
        </condition>
        <value>5.5</value>
      </u_max>
      <u_min>-4</u_min> <!-- minimum output clamp -->
      <u_max>4</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

  <pi-simple-controller>
    <name>Roll rate comparator</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <or>
            <property>/autopilot/internal/CMDA</property>
            <property>/autopilot/internal/CMDB</property>
          </or>
          <or>
            <property>/autopilot/internal/LNAV-HDG</property>
            <property>/autopilot/internal/LNAV-NAV</property>
          <property>/autopilot/internal/LNAV</property>
          </or>
        </and>
      </condition>
    </enable>	
    <input>
      <prop>/orientation/roll-rate-degps</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-roll-rate</prop>
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <Kp>0.01</Kp>          <!-- proportional gain -->
      <Ki>0.1</Ki>          <!-- integral gain -->
      <u_min>                <!-- minimum output clamp with flaps NOT up (25 degrees of steering wheel) -->
        <condition>
          <greater-than>
            <property>/fdm/jsbsim/fcs/flap-pos-norm</property>
            <value>0.124</value>
          </greater-than>
        </condition>
        <value>-0.285714286</value>
      </u_min>
      <u_max>                <!-- maximum output clamp with flaps NOT up (25 degrees of steering wheel) -->
        <condition>
          <greater-than>
            <property>/fdm/jsbsim/fcs/flap-pos-norm</property>
            <value>0.124</value>
          </greater-than>
        </condition>
        <value>0.285714286</value>
      </u_max>
      <u_min>-0.194285714</u_min> <!-- minimum output clamp with flaps up (17 degrees of steering wheel) -->
      <u_max>0.194285714</u_max>   <!-- maximum output clamp with flaps up (17 degrees of steering wheel) -->
    </config>
  </pi-simple-controller>
  
 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->

 <!-- TOGA mode -->

 <filter>
  <name>VS translate</name>
  <debug>false</debug>
  <enable>
   <condition>
    <not>
      <or>
        <and>
          <property>/autopilot/internal/PITCH-ACTIVE</property>
          <not><property>/autopilot/internal/TOGA</property></not>
        </and>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <property>/autopilot/logic/toga-pitch</property>
        </and>
      </or>
    </not>
   </condition>
  </enable>
  <type>gain</type>
  <gain>1.0</gain>
  <input>autopilot/internal/current-vertical-speed-fpm</input>
  <output>/autopilot/settings/vertical-speed-fpm</output>
 </filter>

  <pid-controller>
    <name>TOGA mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <property>/autopilot/logic/toga-pitch</property>
        </and>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
      <offset>20</offset>
    </reference>
    <output>
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>-180</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>0</u_min>
      <u_max>6000</u_max>
    </config>
  </pid-controller>

 <!-- LVLCHG mode -->
  <pid-controller>
    <name>LVLCHG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LVLCHG</property>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>-180</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>/autopilot/settings/min-lvlchg-vs</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/settings/max-lvlchg-vs</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

 <!-- ALT ACQ -->

  <pi-simple-controller>
    <name>Altitude Acquire</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/VNAV-ALT-ACQ</property>
      </condition>
    </enable>	
    <input>
      <prop>/instrumentation/altimeter/indicated-altitude-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-altitude-ft</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>7.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/internal/min-vs-fpm</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/internal/max-vs-fpm</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

 <!-- ALT HOLD -->

  <pi-simple-controller>
    <name>Altitude Hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/VNAV-ALT</property>
      </condition>
    </enable>	
    <input>
      <prop>/instrumentation/altimeter/pressure-alt-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-alt-hold-ft</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
    </output>
    <config>
      <Kp>7.5</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>/autopilot/internal/min-vs-fpm</u_min> <!-- minimum output clamp -->
      <u_max>/autopilot/internal/max-vs-fpm</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

 <!-- GLIDESLOPE mode -->

<filter>
  <type>gain</type>
  <gain>60</gain>
  <enable>
    <condition>
      <property>/autopilot/internal/VNAV-GS</property>
    </condition>
  </enable>	
  <input>
    <property>/instrumentation/nav/gs-rate-of-climb</property>
  </input>
  <output>
    <prop>/autopilot/settings/vertical-speed-fpm</prop>
  </output>
</filter>

 <!-- VS hold for any mode -->

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
      <condition>
        <property>/autopilot/internal/PITCH-ACTIVE</property>
      </condition>
    </enable>
    <input>
      <condition>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <not><property>/autopilot/logic/toga-pitch</property></not>
          <greater-than>
            <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <value>60</value>
          </greater-than>
        </and>
      </condition>
      <value>15</value>
    </input>	
    <input>
      <condition>
        <and>
          <property>/autopilot/internal/TOGA</property>
          <not><property>/autopilot/logic/toga-pitch</property></not>
          <less-than>
            <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
            <value>60</value>
          </less-than>
        </and>
      </condition>
      <value>-10</value>
    </input>
    <input>
      <expression>
        <sum>
          <property>/orientation/alpha-deg</property>
          <product>
            <asin>
              <div>
                <property>/autopilot/settings/vertical-speed-fpm</property>
                <product>
                  <property>/instrumentation/airspeed-indicator/true-speed-kt</property>
                  <value>101.0696354508</value>
                </product>
              </div>
            </asin>
            <value>57.2957795131</value>
          </product>
        </sum>
      </expression> 
    </input>
  <output>
    <prop>/autopilot/settings/target-pitch-deg</prop>
  </output>
</filter>

  <pi-simple-controller>
    <name>Pitch comparator</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/PITCH-ACTIVE</property>
      </condition>
    </enable>	
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-accel-pitch</prop>
    </output>
    <config>
      <Kp>0.1</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>-0.2</u_min> <!-- minimum output clamp -->
      <u_max>0.2</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
      <condition>
        <property>/autopilot/internal/PITCH-ACTIVE</property>
      </condition>
    </enable>	
    <input>
      <expression>
        <sum>
          <property>/autopilot/settings/target-accel-pitch</property>
          <div>
            <value>1</value>
            <cos>
              <div>
                <property>/orientation/roll-deg</property>
                <value>57.2957795131</value>
              </div>
            </cos>
          </div>
          <value>-1</value>
        </sum>
      </expression> 
    </input>
  <output>
    <prop>/autopilot/settings/target-accel</prop>
  </output>
</filter>

  <pi-simple-controller>
    <name>Acceleration comparator</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/PITCH-ACTIVE</property>
      </condition>
    </enable>	
    <input>
      <prop>/autopilot/settings/current-accel</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-accel</prop>
    </reference>
    <output>
      <prop>/autopilot/internal/elevator</prop>
    </output>
    <config>
      <Kp>-0.9</Kp>          <!-- proportional gain -->
      <Ki>-0.3</Ki>          <!-- integral gain -->
      <u_min>-1</u_min> <!-- minimum output clamp -->
      <u_max>1</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>

<filter>
  <type>gain</type>
  <gain>0.1</gain>
  <input>
    <property>/orientation/pitch-rate-degps</property>
  </input>
  <output>
    <prop>/autopilot/internal/elevator-damp</prop>
  </output>
</filter>

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
      <condition>
        <and>
          <or>
            <property>/autopilot/internal/CMDA</property>
            <property>/autopilot/internal/CMDB</property>
          </or>
          <property>/autopilot/internal/PITCH-ACTIVE</property>
        </and>
      </condition>
    </enable>	
    <input>
      <expression>
        <sum>
          <property>/autopilot/internal/elevator-damp</property>
          <property>/autopilot/internal/elevator</property>
        </sum>
      </expression> 
    </input>
  <output>
    <prop>/controls/flight/elevator</prop>
  </output>
</filter>

<!-- helper which calculates current acceleration -->
<filter>
  <type>gain</type>
  <gain>1</gain>
  <input>
    <expression>
      <product>
        <sum>
          <property>/accelerations/n-z-cg-fps_sec</property>
          <value>1</value>
        </sum>
        <value>-1</value>
      </product>
    </expression>
  </input>
  <output>
    <prop>/autopilot/settings/current-accel</prop>
  </output>
</filter>

<!--
============================
== STABILIZER Trim system ==
============================
-->
 <logic>
   <input>
     <or>
       <greater-than>
         <property>/controls/flight/elevator</property>
         <value>0.1</value>
       </greater-than>
       <less-than>
         <property>/controls/flight/elevator</property>
         <value>-0.1</value>
       </less-than>
     </or>
   </input>
   <output>/b733/helpers/elevator-cmd-gr-10</output>
 </logic>

 <filter>
  <type>moving-average</type>
  <samples>480</samples>
  <input>/b733/helpers/elevator-cmd-gr-10</input>
  <output>/b733/helpers/elevator-cmd-av-4</output> <!-- average for 4 seconds -->
 </filter>

 <logic>
   <input>
     <greater-than>
       <property>/b733/helpers/elevator-cmd-av-4</property>
       <value>0.75</value>
     </greater-than>
   </input>
   <output>/b733/helpers/trim-feel-3-4</output>
 </logic>

<filter>
  <name>Stabilizer position sample and hold</name>
  <debug>false</debug>
  <enable>
      <condition>
        <and>
          <or>
            <property>/autopilot/internal/CMDA</property>
            <property>/autopilot/internal/CMDB</property>
          </or>
          <property>/autopilot/internal/PITCH-ACTIVE</property>
        </and>
      </condition>
  </enable>
  <type>gain</type>
  <gain>1.0</gain>
  <input>
    <condition>
     <and>
      <property>/b733/helpers/trim-feel-3-4</property>
      <greater-than>
        <property>/controls/flight/elevator</property>
        <value>0</value>
      </greater-than>
     </and>
    </condition>
    <value>0.25</value>
  </input>
  <input>
    <condition>
     <and>
      <property>/b733/helpers/trim-feel-3-4</property>
      <less-than>
        <property>/controls/flight/elevator</property>
        <value>0</value>
      </less-than>
     </and>
    </condition>
    <value>14</value>
  </input>
  <input>/fdm/jsbsim/fcs/stabilizer-pos-unit</input>
  <output>/fdm/jsbsim/fcs/stabilizer/stab-target</output>
 </filter>

 <!-- =============================================================== -->
 <!-- Autothrottle                                                    -->
 <!-- =============================================================== -->

  <pid-controller>
    <name>IAS Auto Throttle</name>
    <debug>false</debug>
      <enable>
       <condition>
        <and>
          <property>/autopilot/internal/SPD</property>
          <property>/autopilot/internal/SPD-SPEED</property>
        </and>
      </condition>
     </enable>	
    <input>
      <prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/internal/target-n1</prop>
    </output>
    <config>
      <Kp>8.4</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>22.0</u_min>  <!-- minimum output clamp -->
      <u_max>106.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<filter> <!-- throttle setting from any mode (from TARGET N1) -->
  <type>gain</type>
  <gain>1</gain>
  <enable>
       <condition>
        <and>
          <property>/autopilot/internal/SPD</property>
          <or>
            <property>/autopilot/internal/SPD-N1</property>
            <property>/autopilot/internal/SPD-SPEED</property>
            <property>/autopilot/internal/SPD-RETARD</property>
            <property>/autopilot/internal/TOGA</property>
          </or>
        </and>
      </condition>
  </enable>	
  <input> <!-- N1 range from 22 to 106 -->
    <expression>
      <sum>
        <product>
          <property>/autopilot/internal/target-n1</property>
          <value>0.0119047619</value>
        </product>
        <value>-0.2619047619</value>
      </sum>
    </expression> 
  </input>
  <output>
    <prop>/autopilot/internal/at-throttle</prop>
  </output>
</filter>

<filter>
  <name>SERVO-DRIVER:autothrottle</name>	
  <type>noise-spike</type>
  <max-rate-of-change>
    <condition>
      <and>
        <property>/autopilot/internal/toga-20-sec</property>
        <greater-than-equals>
          <property>/autopilot/internal/at-throttle</property>
          <property>/fdm/jsbsim/fcs/throttle-pos-norm[0]</property>
        </greater-than-equals>
        <property>/autopilot/internal/SPD</property>
        <or>
          <property>/autopilot/internal/SPD-N1</property>
          <property>/autopilot/internal/SPD-SPEED</property>
          <property>/autopilot/internal/SPD-RETARD</property>
          <property>/autopilot/internal/TOGA</property>
        </or>
      </and>
    </condition>
    <value>.233</value>
  </max-rate-of-change>
  <max-rate-of-change>
    <condition>
      <and>
        <less-than>
          <property>/autopilot/internal/at-throttle</property>
          <property>/fdm/jsbsim/fcs/throttle-pos-norm[0]</property>
        </less-than>
        <property>/autopilot/internal/SPD</property>
        <or>
          <property>/autopilot/internal/SPD-N1</property>
          <property>/autopilot/internal/SPD-SPEED</property>
          <property>/autopilot/internal/SPD-RETARD</property>
          <property>/autopilot/internal/TOGA</property>
        </or>
      </and>
    </condition>
    <value>0.0468</value>
  </max-rate-of-change>
  <max-rate-of-change>
    <condition>
      <and>
        <greater-than-equals>
          <property>/autopilot/internal/at-throttle</property>
          <property>/fdm/jsbsim/fcs/throttle-pos-norm[0]</property>
        </greater-than-equals>
        <property>/autopilot/internal/SPD</property>
        <or>
          <property>/autopilot/internal/SPD-N1</property>
          <property>/autopilot/internal/SPD-SPEED</property>
          <property>/autopilot/internal/SPD-RETARD</property>
          <property>/autopilot/internal/TOGA</property>
        </or>
      </and>
    </condition>
    <value>.0932</value>
  </max-rate-of-change>
  <max-rate-of-change>10</max-rate-of-change>
  <input>
    <condition>
      <not>
        <and>
          <property>/autopilot/internal/SPD</property>
          <or>
            <property>/autopilot/internal/SPD-N1</property>
            <property>/autopilot/internal/SPD-SPEED</property>
            <property>/autopilot/internal/SPD-RETARD</property>
            <property>/autopilot/internal/TOGA</property>
          </or>
        </and>
      </not>
    </condition>
    <prop>/controls/engines/engine[0]/throttle</prop>
  </input>
  <input>/autopilot/internal/at-throttle</input>
  <output>
    <prop>/autopilot/internal/servo-throttle[0]</prop>
    <prop>/autopilot/internal/servo-throttle[1]</prop>
  </output>
</filter>

<filter>
  <type>gain</type>
  <gain>1</gain>
  <enable>
    <condition>
      <property>/autopilot/internal/SPD-MACH</property>
    </condition>
  </enable>	
  <input>
    <expression>
      <div>
        <product>
          <property>/autopilot/settings/target-speed-mach</property>
          <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
          <property>/fdm/jsbsim/atmosphere/a-fps</property>
          <value>0.5924838012959</value>
        </product>
        <property>/instrumentation/airspeed-indicator/true-speed-kt</property>
      </div>
    </expression> 
  </input>
  <output>
    <prop>/autopilot/settings/target-speed-kt</prop>
  </output>
</filter>


<?xml version="1.0"?>

<PropertyList>


  
 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->


 <!-- vertical speed hold -->
  <pid-controller>
    <name>Pitch vs fd</name>
    <debug>false</debug>
		<enable>
		  <condition>
        <and>
          <equals>
            <property>/autopilot/internal/VNAV</property>
            <value>true</value>
          </equals>
          <equals>
            <property>/autopilot/internal/VNAV-VS</property>
            <value>true</value>
          </equals>
			  </and>
      </condition>
		</enable>	
    <input>
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
      <scale>0.01667</scale>
    </input>
    <reference>
      <prop>/velocities/vertical-speed-fps</prop>
    </reference>
    <output>
      <prop>/instrumentation/flightdirector/vbar-pitch</prop>
    </output>
    <config>
      <Kp>-0.2</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.8</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>-15</u_min> <!-- minimum output clamp -->
      <u_max>30</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

 <!-- vertical speed hold -->
  <pid-controller>
    <name>Pitch vs</name>
    <debug>false</debug>
		<enable>
		  <condition>
        <and>
          <equals>
            <property>/autopilot/internal/CMDB</property>
            <value>true</value>
          </equals>
          <equals>
            <property>/autopilot/internal/VNAV</property>
            <value>true</value>
          </equals>
          <equals>
            <property>/autopilot/internal/VNAV-VS</property>
            <value>true</value>
          </equals>
			  </and>
      </condition>
		</enable>	
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/instrumentation/flightdirector/vbar-pitch</prop>
    </reference>
    <output>
      <prop>/autopilot/internal/elevator-trim-servo-b</prop>
    </output>
    <config>
      <Kp>0.02</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.8</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>-15</u_min> <!-- minimum output clamp -->
      <u_max>30</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<filter>
  <name>SERVO-DRIVER:elevator-trim</name>
  <debug>false</debug>
  <feedback-if-disabled>true</feedback-if-disabled>
  <enable>
	 <condition>
     <and>
       <equals>
         <property>/autopilot/internal/CMDB</property>
         <value>true</value>
       </equals>
       <equals>
         <property>/autopilot/internal/VNAV</property>
         <value>true</value>
       </equals>
     </and>
   </condition>
  </enable>
  <input>/autopilot/internal/elevator-trim-servo-b</input>
  <output>
   <prop>/fdm/jsbsim/fcs/stabilizer/stab-target</prop>
  </output>
  <type>noise-spike</type>
  <max-rate-of-change>
    <condition>
      <greater-than>
        <property>/fdm/jsbsim/fcs/flap-pos-norm</property>
        <value>0</value>
      </greater-than>
    </condition>
    <value>0.205</value>
  </max-rate-of-change>
  <max-rate-of-change>0.1025</max-rate-of-change>
 </filter>

 
</PropertyList>

<?xml version="1.0"?>

<PropertyList>


  
 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->

 <!-- LVLCHG mode -->
  <pid-controller>
    <name>LVLCHG mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>/autopilot/internal/LVLCHG</property>
      </condition>
    </enable>
    <input>
      <prop>/instrumentation/airspeed-indicator/indicated-speed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/vertical-speed-lvlchg-fps</prop>
    </output>
    <config>
      <Kp>-5.0</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10.0</Ti>       <!-- integrator time -->
      <Td>0.0000</Td>    <!-- derivator time -->
      <u_min>-130</u_min> <!-- minimum output clamp -->
      <u_max>100</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>


 <!-- VS mode -->
  <pid-controller>
    <name>VS hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <property>/autopilot/internal/VNAV-VS</property>
          <property>/autopilot/internal/LVLCHG</property>
        </or>
      </condition>
    </enable>
    <input> <!-- input from LVLCHG mode -->
      <condition>
        <property>/autopilot/internal/LVLCHG</property>
      </condition>
      <prop>/autopilot/settings/vertical-speed-lvlchg-fps</prop>
    </input>
    <input> <!-- input from VS mode -->
      <prop>/autopilot/settings/vertical-speed-fpm</prop>
      <scale>0.01667</scale>
    </input>
    <reference>
      <prop>/velocities/vertical-speed-fps</prop>
    </reference>
    <output>
      <prop>/instrumentation/flightdirector/vbar-pitch</prop>
    </output>
    <config>
      <Kp>-0.1566</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>7.0</Ti>       <!-- integrator time -->
      <Td>0.0000</Td>    <!-- derivator time -->
      <u_min>-15</u_min> <!-- minimum output clamp -->
      <u_max>30</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

 <!-- pitch hold -->
  <pid-controller>
    <name>Pitch hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <property>/autopilot/internal/CMDB</property>
          <or>
            <property>/autopilot/internal/VNAV-VS</property>
            <property>/autopilot/internal/LVLCHG</property>
          </or>
        </and>
      </condition>
    </enable>	
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/instrumentation/flightdirector/vbar-pitch</prop> <!--<prop>/autopilot/settings/target-pitch-deg</prop>-->
    </reference>
    <output>
      <prop>/controls/flight/elevator</prop>
    </output>
    <config>
      <Kp>-0.02</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>10</Ti>       <!-- integrator time -->
      <Td>0.00007</Td>    <!-- derivator time -->
      <u_min>-1</u_min> <!-- minimum output clamp -->
      <u_max>1</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<!--
============================
== STABILIZER Trim system ==
============================
-->
 <logic>
   <input>
     <or>
       <greater-than>
         <property>/controls/flight/elevator</property>
         <value>0.1</value>
       </greater-than>
       <less-than>
         <property>/controls/flight/elevator</property>
         <value>-0.1</value>
       </less-than>
     </or>
   </input>
   <output>/b733/helpers/elevator-cmd-gr-10</output>
 </logic>

 <filter>
  <type>moving-average</type>
  <samples>480</samples>
  <input>/b733/helpers/elevator-cmd-gr-10</input>
  <output>/b733/helpers/elevator-cmd-av-4</output> <!-- average for 4 seconds -->
 </filter>

 <logic>
   <input>
     <greater-than>
       <property>/b733/helpers/elevator-cmd-av-4</property>
       <value>0.75</value>
     </greater-than>
   </input>
   <output>/b733/helpers/trim-feel-3-4</output>
 </logic>

<filter>
  <name>Stabilizer position sample and hold</name>
  <debug>false</debug>
  <enable>
   <condition>
    <property>/autopilot/internal/CMDB</property>
   </condition>
  </enable>
  <type>gain</type>
  <gain>1.0</gain>
  <input>
    <condition>
     <and>
      <property>/b733/helpers/trim-feel-3-4</property>
      <greater-than>
        <property>/controls/flight/elevator</property>
        <value>0</value>
      </greater-than>
     </and>
    </condition>
    <value>0.25</value>
  </input>
  <input>
    <condition>
     <and>
      <property>/b733/helpers/trim-feel-3-4</property>
      <less-than>
        <property>/controls/flight/elevator</property>
        <value>0</value>
      </less-than>
     </and>
    </condition>
    <value>14</value>
  </input>
  <input>/fdm/jsbsim/fcs/stabilizer-pos-unit</input>
  <output>/fdm/jsbsim/fcs/stabilizer/stab-target</output>
 </filter>
 
</PropertyList>

<animation>
 <type>rotate</type>
 <object-name>PARKINGBRAKE</object-name>
 <property>controls/gear/brake-parking</property>
 <factor>70</factor>
 <offset-deg>-70</offset-deg>
 <center>
  <x-m>-6.73774</x-m>
  <y-m>-0.12218</y-m>
  <z-m>0.55368</z-m>
 </center>
 <axis>
  <x>0</x>
  <y>1</y>
  <z>0</z>
 </axis>
</animation>

 <animation>
  <type>pick</type>
  <visible>true</visible>
  <object-name>PARKINGBRAKE</object-name> 
  <action>
  <name>Parking Brake</name>
      <repeatable>false</repeatable>
  <button>0</button>
    <binding>
   <command>property-toggle</command>
    <property>/controls/gear/brake-parking</property>
  </binding>
        <binding>
          <command>nasal</command>
          <script>
          	var setting = getprop ("/controls/gear/brake-parking");
		        var names = ["Off", "On"];
						if (getprop("sim/co-pilot")) {
		          setprop ("/sim/messages/copilot", "Parking Brake is " ~ names[setting] ~ ".");
            }
	        </script>
        </binding>
 </action>
 </animation>


<animation>
 <type>rotate</type>
 <object-name>SPEEDBRAKE</object-name>
 <property>controls/gear/autobrakes</property>
 <factor>20</factor>
 <offset-deg>-90</offset-deg>
 <center>
  <x-m>-6.73474</x-m>
  <y-m>-0.10868</y-m>
  <z-m>0.56368</z-m>
 </center>
 <axis>
  <x>0</x>
  <y>1</y>
  <z>0</z>
 </axis>
</animation>


 <animation>
  <type>pick</type>
  <visible>true</visible>
  <object-name>SPEEDBRAKE</object-name> 
  <action>
  <name>Combo Speed Brake and AutoBrake</name>
      <repeatable>false</repeatable>
  <button>0</button>
<binding>
        	<command>property-cycle</command>
        	<property>/controls/gear/autobrakes</property>
        	<value>0</value>
        	<value>1</value>
        	<value>2</value>
        	<value>3</value>
        	<value>4</value>
        </binding>
        <binding>
          <command>nasal</command>
          <script>
          	var setting = getprop ("/controls/gear/autobrakes");
		        var names = ["Off", "Level 1", "Level 2", "Level 3", "Maximum", "RTO (disused)"];
						if (getprop("sim/co-pilot")) {
		          setprop ("/sim/messages/copilot", "Autobrakes set to " ~ names[setting] ~ ".");
            }
	        </script>
        </binding>
 </action>
 </animation>


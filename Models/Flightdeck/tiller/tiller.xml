<PropertyList>

	<path>tiller.ac</path>

	<animation>
		<type>material</type>
		<object-name>Tiller</object-name>
		<emission>
			<red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue>
		</emission>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Tiller</object-name>
		<condition>
			<property>controls/gear/gear-down</property>
		</condition>
		<property>fdm/jsbsim/fcs/steer-pos-deg</property>
		<factor> -1 </factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x> 0 </x>
			<y> 1 </y>
			<z> 0 </z>
		</axis>
	</animation>

</PropertyList>

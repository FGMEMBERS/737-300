<?xml version="1.0"?>

<PropertyList>

  <path>bus.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>
	

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name> 
    <object-name>arcond</object-name> 
    <object-name>rodas_frente</object-name> 
    <object-name>rodas_atras</object-name> 
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name> 
    <object-name>arcond</object-name> 
    <object-name>rodas_frente</object-name> 
    <object-name>rodas_atras</object-name> 
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
 <animation>
  <type>select</type>
    <object-name>fuselage</object-name> 
    <object-name>arcond</object-name> 
    <object-name>rodas_frente</object-name> 
    <object-name>rodas_atras</object-name> 
  <condition>
   <and>
    <property>controls/gear/brake-parking</property>
    <property>controls/gear/gear-down</property>
   </and>
  </condition>
 </animation>
  

</PropertyList>
